<Page
    x:Class="Woning.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Woning"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="LampCardTemplate" x:DataType="local:Lamp">
            <Border BorderBrush="#555555" BorderThickness="1" CornerRadius="8" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Grid Width="300" Height="200">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Image Grid.Row="0" Source="Images/lamp-on.svg" Grid.Column="0" Width="80"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Name="txt" Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom" FontSize="20" FontWeight="Bold" Margin="10,0,0,20" Text="{x:Bind Name}"/>
                    <Slider Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10,0,10,0"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <StackPanel Name="stack">
        <TextBlock Name="test" HorizontalAlignment="Center"></TextBlock>
        <Button x:Name="button" Content="Haal lichten op" HorizontalAlignment="Center" Click="button_Click"/>
        <ListView ItemsSource="{x:Bind LampCollection}" ItemTemplate="{StaticResource LampCardTemplate}">
            
        </ListView>
    </StackPanel>
</Page>
